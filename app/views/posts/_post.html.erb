<div class='post-content'> 
  <li>
    <h4><%= link_to post.title, user_post_path(user_id: @user.id, id: post.id) %></h4>
  </li>
  <p><%= post.text %></p>
  <% if can?(:destroy, post) %>
    <div>
      <%= form_with(model: post, method: :delete, url: user_post_path(user_id: @user.id, id: post.id)) do |form| %>
        <%= form.submit "Delete" %>
      <% end %> 
    </div>
  <% end %>
  <p class='counters'>
    Comments: <%= post.comments_counter.to_i > 0 ? post.comments_counter : '0' %> Likes: <%= post.likes_counters.to_i > 0 ? post.likes_counters : '0' %>
  </p>
</div>
